<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coutinho.brian.rectangleareaperimeter.MainActivi">

<TextView
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/result"
    android:textSize="20sp"
    android:layout_marginTop="55dp"
    android:layout_below="@+id/button_perimeter"
    android:layout_alignLeft="@+id/button_area"
    android:layout_alignStart="@+id/button_area" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_height"
            android:hint="@string/enter_height"
            android:inputType="number"
            android:layout_above="@+id/button_area"
            android:layout_alignLeft="@+id/button_area"
            android:layout_alignStart="@+id/button_area" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/enter_width"
        android:hint="@string/enter_width"
        android:inputType="number"
        android:layout_above="@+id/enter_height"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/area"
        android:id="@+id/button_area"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/enter_width"
        android:layout_alignStart="@+id/enter_width" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/perimeter"
        android:id="@+id/button_perimeter"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/enter_height"
        android:layout_alignEnd="@+id/enter_height" />
</RelativeLayout>